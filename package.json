{
  "name": "text-comparator",
  "displayName": "Text Comparator",
  "description": "Compare and highlight differences between text files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:text-comparator.compare"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "text-comparator.compare",
        "title": "Compare Text Files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "text-comparator.compare",
          "group": "navigation",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Text Comparator",
      "properties": {
        "textComparator.highlightAdditions": {
          "type": "string",
          "default": "#28a745",
          "description": "Color for added text"
        },
        "textComparator.highlightDeletions": {
          "type": "string",
          "default": "#d73a49",
          "description": "Color for deleted text"
        },
        "textComparator.highlightModifications": {
          "type": "string",
          "default": "#f9c513",
          "description": "Color for modified text"
        },
        "textComparator.ignoreWhitespace": {
          "type": "boolean",
          "default": false,
          "description": "Ignore whitespace when comparing text"
        },
        "textComparator.ignoreCase": {
          "type": "boolean",
          "default": false,
          "description": "Ignore case when comparing text"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "diff": "^5.0.0"
  }
}
